@model StudentPortal.Models.AddStudentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/addStudent.css">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
	<body>
		
		<div class="caption">
			Your academic hub | Connect with resources, manage your studies, and stay on top of important updates.
		</div>
		<div id="toast" class="toast position-fixed start-50 translate-middle" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
			<div class="toast-header">
				<span id="toastSquare" class="rounded me-2 custom-toast-img" alt="Toast Image"></span>
				<strong class="me-auto" id="toastTitle">Complete!</strong>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body" id="toastMessage"></div>
		</div>
		<img class="background-picture" src="https://bau.edu/blog/wp-content/uploads/2023/04/benefits-of-going-to-college.jpg"></img>
		<div class="pic-front-container">
		<img class="image-front" src="https://imgur.com/Ad2lAqK.png" alt="Image">
		</div>
		<section class="content">
			<img class="three-dots-icon" src="https://imgur.com/9GF3tPx.png">
			
			<div class="content-box">
				<img class="plus-icon" src="https://imgur.com/MT02Qdz.png" alt="plus--v1" />
				<h1>Add Student</h1>
				<h2>Fill in the details to get started.</h2>
				<hr style="border: 1px solid #252729; width: 90%;">

				<form method="post">		
					<div class="mt-3">
						<label class="form-label">Student ID*</label>
						<input type="number" class="form-control" asp-for="Id" placeholder="Enter student ID" min="1" required />
					</div>

					<div class="mt-3">
						<label class="form-label">First Name*</label>
						<input type="text" class="form-control" asp-for="FirstName" placeholder="Enter first name" required maxlength="15" pattern="^[A-Za-z ]{1,15}$" title="First name should only contain letters and be up to 15 characters long." />
					</div>

					<div class="mt-3">
						<label class="form-label">Middle Name</label>
						<input type="text" class="form-control" asp-for="MiddleName" placeholder="Enter middle name" maxlength="15" pattern="^[A-Za-z ]{0,15}$" title="Middle name should only contain letters and be up to 15 characters long." />
					</div>

					<div class="mt-3">
						<label class="form-label">Last Name*</label>
						<input type="text" class="form-control" asp-for="LastName" placeholder="Enter last name" required maxlength="15" pattern="^[A-Za-z ]{1,15}$" title="Last name should only contain letters and be up to 15 characters long." />
					</div>

					<div class="mt-3">
						<label class="form-label">Course*</label>
						<input type="text" class="form-control" asp-for="Course" placeholder="Enter Course" required maxlength="10" />
					</div>

					<div class="mt-3">
						<label class="form-label">Year*</label>
						<input type="number" class="form-control" asp-for="Year" placeholder="Enter Year" min="1" required />
					</div>

					<div class="mt-3">
						<label class="form-label">Remarks*</label>
						<select class="form-select" asp-for="Remarks" required>
							<option value="" disabled selected hidden>Enter Remarks</option>
							<option value="Shiftee">Shiftee</option>
							<option value="Transferee">Transferee</option>
							<option value="New">New</option>
							<option value="Old">Old</option>
							<option value="Cross-Enrollee">Cross-Enrollee</option>
							<option value="Returnee">Returnee</option>
						</select>
					</div>

					<div class="btn-container">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</section>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			var alertMessage = '@ViewBag.AlertMessage';
        
			if (alertMessage) {
				var toastMessageElement = document.getElementById('toastMessage');
				var toastTitleElement = document.getElementById('toastTitle');
				var toastSquare = document.getElementById('toastSquare');

				if (alertMessage.includes("successfully")) {
					toastTitleElement.innerText = "Complete!";
				} else {
					toastSquare.style.backgroundColor = '#d44343';
					toastTitleElement.innerText = "Error!";
				}

				toastMessageElement.innerText = alertMessage;

				var toastElement = document.getElementById('toast');
				toastElement.style.display = 'block'; 
				var toast = new bootstrap.Toast(toastElement);
				toast.show(); 
			}
		});
	</script>
	</body>
</html>