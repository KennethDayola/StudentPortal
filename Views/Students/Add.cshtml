@model StudentPortal.Models.AddStudentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/addStudent.css">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
	<body>
		<div class="caption">
			Your academic hub | Connect with resources, manage your studies, and stay on top of important updates.
		</div>
		<img class="background-picture" src="https://bau.edu/blog/wp-content/uploads/2023/04/benefits-of-going-to-college.jpg"></img>
		<div class="pic-front-container">
		<img class="image-front" src="https://imgur.com/Ad2lAqK.png" alt="Image">
		</div>
		<section class="content">
			<img class="three-dots-icon" src="https://imgur.com/9GF3tPx.png">
			
			<div class="content-box">
				<img class="plus-icon" src="https://imgur.com/MT02Qdz.png" alt="plus--v1" />
				<h1>Add Student</h1>
				<h2>Fill in the details to get started.</h2>
				<hr style="border: 1px solid #252729; width: 90%;">

				<form id="addStudentForm" onsubmit="return notifySave()" method="post">

					<div class="mt-3">
						<label class="form-label">Student ID*</label>
						<input type="number" class="form-control" asp-for="Id" placeholder="Enter student ID" min="1" required />
					</div>

					<div class="mt-3">
						<label class="form-label">First Name*</label>
						<input type="text" class="form-control" asp-for="FirstName" placeholder="Enter first name" required />
					</div>

					<div class="mt-3">
						<label class="form-label">Middle Name</label>
						<input type="text" class="form-control" asp-for="MiddleName" placeholder="Enter middle initial" required/>
					</div>

					<div class="mt-3">
						<label class="form-label">Last Name*</label>
						<input type="text" class="form-control" asp-for="LastName" placeholder="Enter last name" required />
					</div>

					<div class="mt-3">
						<label class="form-label">Course*</label>
						<input type="text" class="form-control" asp-for="Course" placeholder="Enter Course" required />
					</div>

					<div class="mt-3">
						<label class="form-label">Year*</label>
						<input type="number" class="form-control" asp-for="Year" placeholder="Enter Year" min="1" required />
					</div>
					<div class="mt-3">
						<label class="form-label">Remarks*</label>
						<select class="form-select" asp-for="Remarks" required>
							<option value="" disabled selected hidden>Enter Remarks</option>
							<option value="Shiftee">Shiftee</option>
							<option value="Transferee">Transferee</option>
							<option value="New">New</option>
							<option value="Old">Old</option>
							<option value="Cross-Enrollee">Cross-Enrollee</option>
						</select>
					</div>

					<div class="btn-container">
						<button type ="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</section>
	<script>
		
		function notifySave(){
			this.form.submit();
			const inputs = form.querySelectorAll('input');
			inputs.forEach(input => {
				input.value = ''; 
			});

			const remarksSelect = form.querySelector('select[asp-for="Remarks"]');
			remarksSelect.selectedIndex = 0; 
			remarksSelect.setCustomValidity('');
			alert('Student has been successfully added!');
			return false;
		}
	</script>
	</body>
</html>