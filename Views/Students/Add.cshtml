@model StudentPortal.Models.AddStudentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/add.css">
</head>
	<body>
		<div class="background-picture">
			<img class="image" src="https://imgur.com/S0sWIOE.jpeg"></img>
		</div>
		<section class="content">
			<div class="content-box">
				<h1>Add Student</h1>
				<h2>Fill in the details to get started.</h2>
				<hr style="border: 1px solid #252729; width: 90%;">
				<form method="post">

					<div class="mt-3">
						<label class="form-label">Student ID</label>
						<input type="text" class="form-control" asp-for="Id"/>
					</div>

					<div class="mt-3">
						<label class= "form-label">First Name</label>
						<input type="text" class="form-control" asp-for="FirstName"/>
					</div>

					<div class="mt-3">
						<label class="form-label">Middle Name</label>
						<input type="text" class="form-control" asp-for="MiddleName"/>
					</div>

					<div class="mt-3">
						<label class="form-label">Last Name</label>
						<input type="text" class="form-control" asp-for="LastName"/>
					</div>

					<div class="mt-3">
						<label class="form-label">Course</label>
						<input type="text" class="form-control" asp-for="Course"/>
					</div>

					<div class="mt-3">
						<label class="form-label">Remarks</label>
						<input type="text" class="form-control" asp-for="Remarks"/>
					</div>

					<div class="btn-container">
						<button type="button" class="btn btn-secondary">Cancel</button>
						<button type ="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</section>
	</body>
</html>