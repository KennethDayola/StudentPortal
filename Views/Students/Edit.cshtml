@model StudentPortal.Models.Entities.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/edit.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <section class="content-box">
        <h1><img width="30" style="margin-right: 10px; margin-top: -5px;" src="https://cdn-icons-png.freepik.com/512/5812/5812594.png">Edit Student</h1>
        
        @if (Model is null)
        {
            <p>No student was found with this Id</p>
        }
        else
        {
            <form id="editForm">

                <div class="mt-3">
                    <label class="form-label">Student ID</label>
                    <input type="number" class="form-control readonly-textbox" asp-for="Id" min="1" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" required />
                </div>

                <div class="mt-3">
                    <label class="form-label">Middle Name</label>
                    <input type="text" class="form-control" asp-for="MiddleName" required/>
                </div>

                <div class="mt-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" required />
                </div>

                <div class="mt-3">
                    <label class="form-label">Course</label>
                    <input type="text" class="form-control" asp-for="Course" required />
                </div>

                <div class="mt-3">
                    <label class="form-label">Year</label>
                    <input type="number" class="form-control" asp-for="Year" min="1" required />
                </div>
                <div class="mt-3">
                    <label class="form-label">Remarks</label>
                    <select class="form-select" style="border-color: #999c9b !important;" asp-for="Remarks" required>
                        <option value="Shiftee">Shiftee</option>
                        <option value="Transferee">Transferee</option>
                        <option value="New">New</option>
                        <option value="Old">Old</option>
                        <option value="Cross-Enrollee">Cross-Enrollee</option>
                    </select>
                </div>
                <div class="mt-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" style="border-color: #999c9b !important;" asp-for="Status">
                        <option value="AC">Active</option>
                        <option value="IN" selected="@(Model.Status == "IN")">Inactive</option>
                    </select>
                </div>
                <div class="mt-3">
                    <button type="button" id="saveButton" class="btn btn-primary-save">Save</button>
                </div>
            </form>
        }
    </section>

    <script>
        $(document).ready(function () {
            $("#saveButton").click(function (event) {
                event.preventDefault(); 

                var formData = $("#editForm").serialize();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Edit", "Students")", 
                    data: formData,
                    success: function (response) {
                        alert("Student details updated successfully!");
                        window.location.href = "@Url.Action("List", "Students")"; 
                    },
                    error: function (xhr, status, error) {
                        alert("An error occurred: " + error);
                    }
                });
            });
        });
    </script>
</body>
</html>
