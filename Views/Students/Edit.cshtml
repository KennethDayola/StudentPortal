@model StudentPortal.Models.Entities.Student

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/subpages.css">
</head>
	<body>
		<section class="content">
			<h1>Edit Student</h1>

			@if (Model is null)
			{
				<p>No student was found with this Id</p>
			}
			else
			{
			<form method="post">

				<div class="mt-3">
					<label class="form-label">Student ID</label>
					<input type="text" class="form-control readonly-textbox" asp-for="Id" readonly />
				</div>

				<div class="mt-3">
					<label class="form-label">First Name</label>
					<input type="text" class="form-control" asp-for="FirstName" />
				</div>

				<div class="mt-3">
					<label class="form-label">Middle Name</label>
					<input type="text" class="form-control" asp-for="MiddleName" />
				</div>

				<div class="mt-3">
					<label class="form-label">Last Name</label>
					<input type="text" class="form-control" asp-for="LastName" />
				</div>

				<div class="mt-3">
					<label class="form-label">Course</label>
					<input type="text" class="form-control" asp-for="Course" />
				</div>

				<div class="mt-3">
					<label class="form-label">Remarks</label>
					<input type="text" class="form-control" asp-for="Remarks" />
				</div>

				<div class="mt-3">
					<button type="submit" class="btn btn-primary">Save</button>

					<button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
				</div>
			</form>
			}
		</section>
	</body>
</html>
